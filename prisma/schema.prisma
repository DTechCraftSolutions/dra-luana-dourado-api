// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  PLANO
  PARTICULAR
}

enum RoleStatus {
  CANCELADO
  ATENDIDO
  PENDENTE
}

enum RoleTypeProcedure {
  COMUM
  RECORRENTE
}

model Professional {
  id            String      @id @default(uuid())
  name          String
  phone         String
  email         String      @unique
  password_hash String
  dentist       Boolean
  Schedule      Schedule[]
  Procedure     Procedure[]

  @@map("professionals")
}

model Patient {
  id            String     @id @default(uuid())
  name          String
  phone         String
  email         String     @unique
  password_hash String
  status        String
  Schedule      Schedule[]

  @@map("patients")
}

model Schedule {
  id             String       @id @default(uuid())
  date           DateTime
  procedures     Procedure    @relation(fields: [procedureId], references: [id])
  professionals  Professional @relation(fields: [professionalId], references: [id])
  patients       Patient      @relation(fields: [patientId], references: [id])
  status         RoleStatus
  type           RoleType
  procedureId    String
  professionalId String
  patientId      String
}

model Procedure {
  id             String            @id @default(uuid())
  name           String
  type           RoleTypeProcedure
  duration       String
  Schedule       Schedule[]
  professionals  Professional      @relation(fields: [professionalId], references: [id])
  professionalId String

  @@map("schedules")
}
